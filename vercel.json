{
    "builds": [
      {
        "src": "API/server.js",
        "use": "@vercel/node"
      },
      {
        "src": "client/views/**/*",
        "use": "@vercel/static"
      }
    ],
    "rewrites": [
      {
        "source": "/api/(.*)",
        "destination": "/$1"
      },
      {
        "source": "/(.*)",
        "destination": "/client/views/$1"
      }
    ]
  }
  